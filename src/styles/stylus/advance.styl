.advance-main
  width: 100%;
  height 100%;

  .advance-con
    width: 100%;
    max-width: 1400px;
    height calc(100% - 30px);
    background-color: rgba(4, 50, 100, .51);
    border: 1px solid rgba(11, 141, 246, .3);
    padding: 15px;
    display: flex;
    justify-content: space-between;

    .con-left
      width: 200px;
      height 100%;
      
      .ant-collapse
        width: 100%;
        height 100%;
        background-color: transparent;
        border: 0;

        .ant-collapse-item
          border: 0;
          margin-bottom: 20px;
          
          .ant-collapse-header
            width: 100%;
            height 40px;
            display: flex;
            align-items: center;
            padding: 0 16px;
            color: rgba(255, 255, 255, .8);
            background: -webkit-linear-gradient(left, rgba(46, 163, 243, 1), rgba(46, 163, 243, .1));

            .ant-collapse-arrow
              position: static;
              transform: translateY(0);
              margin-right: 5px;

          .ant-collapse-content
            border: 0;
            background-color: transparent;

            .ant-collapse-content-box
              padding: 0;
              & > ul
                width: 100%;
                & > li
                  width: 100%;
                  height 40px;
                  background-color: rgba(41, 121, 255, .3);
                  color: rgba(255, 255, 255, .8);
                  display: flex;
                  align-items: center;
                  justify-content: center;
                  border-bottom: 1px solid rgba(4, 50, 100, .51);
                  cursor: pointer;

        
    .con-right
      width: calc(100% - 220px);
      height 100%;
      padding: 0 15px;
        